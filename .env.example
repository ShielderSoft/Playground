# Security configuration for Docker deployment
# Environment-specific variables (override in production)

# Application settings
NODE_ENV=production
PORT=8000
LOG_LEVEL=info

# Security settings
ALLOWED_ORIGINS=http://localhost:8000,https://yourdomain.com

# FastAPI settings
DOCS_URL=/docs
REDOC_URL=/redoc

# Rate limiting
RATE_LIMIT_PER_MINUTE=30

# Add your specific environment variables here
# DATABASE_URL=
# API_KEY=
# JWT_SECRET=

# Monitoring and logging
ENABLE_METRICS=true
LOG_FORMAT=json

# Python specific
PYTHONPATH=/app
PYTHONUNBUFFERED=1
